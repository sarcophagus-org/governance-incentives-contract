{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "allowJs": false,
  "include": [
    "./scripts",
    "./test",
    "./typechain",
    "./deploy",
    "./types",
    "src/scripts",
    "Test.ts",
    "./**/*.ts",
    "./hardhat.config.ts"
  ],
  "files": ["./hardhat.config.ts"]
}
